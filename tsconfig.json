        "target": "ES2020",
        "module": "commonjs",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "strict": false,
        "baseUrl": "./",
        "outDir": "dist"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "repos",
        "repos/**/*"
    ]
}